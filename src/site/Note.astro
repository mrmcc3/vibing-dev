---
import Html from "@shared/Html.astro";
import Head from "./Head.astro";
import Header from "./header/Header.astro";
import Footer from "./footer/Footer.astro";
const {
  frontmatter: { title, description, draft },
} = Astro.props;
---

<Html>
  <Head
    slot="head"
    title={title}
    description={description}
    ogType="article"
    noindex={draft}
  />
  <Header />
  <main class="flex-1 px-4">
    <article
      class="prose mx-auto break-words dark:prose-invert prose-sm sm:prose-base prose-pre:-mx-4 prose-pre:tracking-tight"
    >
      <slot />
    </article>
  </main>
  <Footer />
</Html>
